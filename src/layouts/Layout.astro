---
import Header from "../components/Header/Header.astro"
import Notification from "../components/Notification/Notification.astro"

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="^^^^ Desarrollador WEB Frontend especializado en React. Soy Luca Javier, conÃ³ceme mÃ¡s haciendo click en el link dea arriba y contactame"
		/>
		<meta name="subject" content="Portfolio Web developer ReactJS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="assets/icons/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Notification />
		<Header />
		<main>
			<slot />
		</main>
	</body>
</html>

<script>
	const prevTitle = document.title

	window.addEventListener("blur", () => {
		document.title = "Â¡No te vayas! ðŸ˜±"
	})
	window.addEventListener("focus", () => (document.title = prevTitle))
</script>

<style is:global>
	/* --------------------------RESET-------------------------- */
	:root {
		--bg: linear-gradient(161deg, #2a233e 39.69%, #1b172a 96.87%);
		--primary: #ff7e33;
		--second: #800080;
		--third: #e3e2e9;
		--header-height: 100px;
		--max-width: 1264px;
		--font: Verdana, Geneva, Tahoma, sans-serif;
	}

	html {
		overflow: hidden;
		scroll-behavior: smooth;
		font-size: 16px;
		font-family: var(--font);
		background: var(--bg);
		color: var(--third);
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	body {
		margin: 0;
		width: 100vw;
		height: 100vh;
		overflow: hidden;
	}
	main {
		scroll-behavior: smooth;
		position: relative;
		max-width: var(--max-width);
		margin: auto;
		height: 100vh;
		min-height: 100vh;
		padding: 0 2rem;
		width: 100%;
		overflow: hidden;
		overflow-y: scroll;
	}
	main::-webkit-scrollbar {
		background-color: transparent;
		width: 0px;
	}
	p {
		line-height: 1.6;
	}
	img {
		max-width: 100%;
	}
	a {
		text-decoration: none;
		color: var(--primary);
		cursor: default;
		user-select: none;
	}
	a:hover {
		color: var(--third);
	}
	a:active {
		color: var(--third);
	}

	section {
		margin: 4rem auto;
		scroll-margin-top: var(--header-height);
		width: 100%;
		min-height: 100vh;
	}

	/* -----------------------Classes----------------------- */

	.fs-1 {
		font-size: calc(1.375rem + 1.5vw) !important;
	}
	.fs-2 {
		font-size: calc(1.325rem + 0.9vw) !important;
	}
	.fs-3 {
		font-size: calc(1.3rem + 0.6vw) !important;
	}
	.fs-4 {
		font-size: calc(1.275rem + 0.3vw) !important;
	}

	.decorated-title {
		padding-bottom: 1rem;
		margin-bottom: 2rem;
		width: 60%;
		color: var(--primary);
		border-bottom: medium solid var(--second);
	}
</style>
